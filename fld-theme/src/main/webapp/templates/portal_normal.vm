<!DOCTYPE html>

#parse ($init)

<html class="$root_css_class" dir="#language ("lang.dir")" lang="$w3c_language_id">

<head>
	<title>$the_title - $company_name</title>

	<meta content="initial-scale=1.0, width=device-width" name="viewport" />
	#js("$javascript_folder/jquery-3.1.1.min.js")
	#js("$javascript_folder/main-content.js")
	#js("$javascript_folder/slick.min.js")
	
	$theme.include($top_head_include)
	
</head>

<body class="$css_class">

<a href="#main-content" id="skip-to-content">#language ("skip-to-content")</a> 

$theme.include($body_top_include)

#if ($is_signed_in)
	#dockbar()
#end
<div class="container-fluid" id="wrapper">
	<header class="main-header">
		#set( $counter = 0 )
		#foreach ($nav_item in $nav_items)
			#if ($counter == 0)
				#set( $homeUrl = $nav_item.getURL() )
			#end
			#set( $counter = $counter + 1 )
		#end	
		<nav class="main-nav">
			<a class="logo" href="$homeUrl">
				<h1>
					<img src="$images_folder/custom/logo.png" />
				</h1>
			</a>
			<div class="nav-desktop">
				#parse ("$full_templates_path/navigation.vm")
			</div>
			<a class="nav-link-mobile" href="javascript:void(0)">
				<span></span>
			</a>			
			<ul id="menu-main-right" class="nav-menu">
				#if ($theme.getSetting("twitter") != "")
					<li class="twitter"><a target="_blank" href="$theme.getSetting("twitter")"><i class="icon-twitter "></i><span class="fa-hidden">Twitter</span></a></li>
				#end
				#if ($theme.getSetting("facebook") != "")
					<li class="facebook"><a target="_blank" href="$theme.getSetting("facebook")"><i class="icon-facebook "></i><span class="fa-hidden">Facebook</span></a></li>
				#end
				#if ($theme.getSetting("youtube") != "")
					<li class="youtube"><a target="_blank" href="$theme.getSetting("youtube")"><i class="icon-youtube "></i><span class="fa-hidden">YouTube</span></a></li>
				#end
			</ul>			
			<div class="navigation-content-mobile">
				#parse ("$full_templates_path/mobile-navigation.vm")
			</div>
		</nav>
	</header>
	<div id="content">
		#if ($selectable)
			$theme.include($content_include)
		#else
			$portletDisplay.recycle()

			$portletDisplay.setTitle($the_title)

			$theme.wrapPortlet("portlet.vm", $content_include)
		#end		
	</div>
	#set($currentSiteName = "web"+$themeDisplay.getLayout().getGroup().getFriendlyURL()) 
	<footer id="footer" role="contentinfo">
		<div class="channels">
			<ul>
				#if ($theme.getSetting("twitter") != "")
					<li><a href="$theme.getSetting("twitter")"><img src="$images_folder/custom/twitter-logo.png" /></a></li>
				#end
				#if ($theme.getSetting("facebook") != "")
					<li><a href="$theme.getSetting("facebook")"><img src="$images_folder/custom/facebook-logo.png" /></a></li>
				#end
				#if ($theme.getSetting("youtube") != "")
					<li><a href="$theme.getSetting("youtube")"><img src="$images_folder/custom/youtube-logo.png" /></a></li>
				#end
			</ul>
		</div>
		<div class="portal-links">
			<ul>
				<li><a href="$currentSiteName/aviso-legal">Aviso Legal</a></li>		
				<li><a href="$currentSiteName/politica-cookies">Política de cookies</a></li>
				<li><a href="$currentSiteName/politica-de-privacidad">Política de Privacidad</a></li>
				<li><a href="$currentSiteName/mapa-web1">Mapa web</a></li>
			</ul>
		</div>
		<div class="info-wpr">
			<p>© 2017 Fundación Línea Directa. </p>
		</div>
	</footer>
</div>

$theme.include($body_bottom_include)

$theme.include($bottom_include)

</body>

</html>